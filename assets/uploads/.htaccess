# ============================================
# FILE: assets/uploads/.htaccess
# FUNGSI: Keamanan folder uploads
# ============================================

# Blok akses langsung ke file PHP di folder ini
<FilesMatch "\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Hanya izinkan file gambar
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Nonaktifkan eksekusi PHP
php_flag engine off

# ============================================
# CATATAN:
# File ini mencegah user mengupload/eksekusi
# file PHP berbahaya ke folder uploads
# ============================================